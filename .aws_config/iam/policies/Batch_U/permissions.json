{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowBatchActions",
            "Effect": "Allow",
            "Action": [
                "batch:SubmitJob",
                "batch:DescribeJobs",
                "batch:ListJobs",
                "batch:DescribeJobQueues",
                "batch:DescribeComputeEnvironments"
            ],
            "Resource": "*"
        },
        {
            "Sid": "AllowRegisterJobDefinition",
            "Effect": "Allow",
            "Action": "batch:RegisterJobDefinition",
            "Resource": "*"
        },
        {
            "Sid": "AllowPassRole",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "*"
        }
    ]
}